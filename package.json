{
  "name": "yajsb",
  "module": "src/index.ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "type": "module",
  "dependencies": {
    "chokidar": "^4.0.3",
    "jsdom": "^26.1.0",
    "ls4bun": "github:fullstackbeaver/ls4bun",
    "sass": "^1.86.3",
    "zod": "^3.24.2"
  },
  "scripts": {
    "build": "rm -r ./lib && bun build ./src/index.ts --outdir ./lib --minify --target bun --external chokidar --external jsdom --external sass --external zod",
    "start": "bun --watch run src/index.ts",
    "updateComponentsList": "bun run scripts/updateComponentsList.ts types",
    "updateComponentsScssList": "bun run scripts/updateComponentsList.ts scss"
  }
}